+
+/*
+ * check current context for ADMIN/WATCH and
+ * optionally agains supplied argument
+ */
+static inline int __vx_check(int cctx, int ctx, unsigned int mode)
+{
+	if (mode & VX_ARG_MASK) {
+		if ((mode & VX_IDENT) && (ctx == cctx))
+			return 1;
+		if ((mode & VX_EQUIV) && (ctx == cctx))
+			return 1;
+	}
+	return (((mode & VX_ADMIN) && (cctx == 0)) ||
+		((mode & VX_WATCH) && (cctx == 1)));
