+	s_info = kmalloc(sizeof(struct context_info), GFP_KERNEL);
+	if (s_info) {
+		int i;
+		memset (s_info, 0, sizeof(*s_info));
+		s_info->vx_id[0] = current->vx_id;
+		atomic_set(&s_info->refcount, 1);
+		atomic_set(&s_info->ticks, current->counter);
