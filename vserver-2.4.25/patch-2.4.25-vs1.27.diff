+			init_tasks[0]->times.tms_stime;
+		for (i=0; i<RLIM_NLIMITS; i++) {
+			s_info->rlim[i] = 0xffffffff;
+			atomic_set(&s_info->res[i], 0);
+		}
+		down_read(&uts_sem);
