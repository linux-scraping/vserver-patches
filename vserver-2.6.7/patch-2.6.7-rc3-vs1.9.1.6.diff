+struct nx_info *create_nx_info(void)
+{
+	struct nx_info *new;
+	int err;
+	
+	nxdprintk("create_nx_info()\n");
+	if (!(new = __loc_nx_info(NX_DYNAMIC_ID, &err)))
+		return NULL;
+	return new;
+}
+
+
+#endif
