+	if (!p || !nxi)
+		BUG();
+
+	nxdprintk("nx_migrate_task(%p,%p[#%d.%d)\n", p, nxi,
+		nxi->nx_id, atomic_read(&nxi->nx_refcount));
+	if (old_nxi == nxi)
+		goto out;
+
+	task_lock(p);
+	set_nx_info(&p->nx_info, nxi);
+	p->nid = nxi->nx_id;
+	task_unlock(p);
+
+	put_nx_info(old_nxi);
