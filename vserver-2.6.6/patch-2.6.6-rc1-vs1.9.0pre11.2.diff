+ */
+
+struct nx_info *find_nx_info(int id)
+{
+	struct nx_info *nxi;
+	
+	if (id < 0) {
+		nxi = current->nx_info;
+		get_nx_info(nxi);
+	} else {
+		spin_lock(&nxlist_lock);
+		if ((nxi = __find_nx_info(id)))
+			get_nx_info(nxi);
+		spin_unlock(&nxlist_lock);
+	}
+	return nxi;
+}
